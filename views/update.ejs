<%- include('./partials/header')%>

<%- include('./partials/nav')%>

<div id="back1" class="d-flex justify-content-start align-items-center py-3">
    <a href="/library" class="text-decoration-none text-dark">
     <i class="ri-arrow-left-line fs-2 ps-4"></i>
    </a>
 <h3 class="px-3">Update Book Details</h3>
 </div>
<div id="main-det" class="d-flex h-100 w-100 justify-content-between align-items-center">


      <div id="card-det" class="w-50 h-100 px-5 d-flex align-items-center  justify-content-center">
        <div class="card " style="width:18rem ">
            <img src="<%= book.file %>" class="card-img-top" alt="...">
            <div class="card-body">
              <h4 class="card-title"><u><%= book.bookname %></u></h4>
              <h6><%= book.author %></h6>
              <p class="card-text"><%= book.desc.slice(0, 80) %>... %></p>
          </div>
        </div>
    </div>

    <form action="/createbook" method="post" class="form-control w-50 h-100">
    
        <label for="" class="w-50">Upload File</label>
        <input class="p-1" type="url" name="file" placeholder="Upload File" value="<%= book.file %>" >
        <br>
        <br>
        <label for="" class="w-50">Book Title 01</label>
        <input class="p-1" type="text" name="bookname" placeholder="Book Name" value="<%= book.bookname %>">
        <br>
        <br>
        <label for="" class="w-50">Author Name</label>
        <input class="p-1" type="text" name="author" placeholder="Author Name" value="<%= book.author %>">
        <br>
        <br>
        <label for="" class="w-50">Category</label>
        <input class="p-1" type="text" name="category" placeholder="Category" value="<%= book.category %>">
        <br>
        <br>
        <label for="" class="w-50">Price</label>
        <input class="p-1" type="number" name="price" placeholder="Price" value="<%= book.price %>">
        <br>
        <br>
        <label for="" class="w-50">isbn</label>
        <input class="p-1" type="text" name="isbn" placeholder="ISBN" value="<%= book.isbn %>">
        <br>
        <br>
        <label for="" class="w-50">Description</label>
    <textarea class="p-1" name="desc" placeholder="Write the description of book"><%= book.desc %></textarea>
    <br>
        <br>
        <a href="/library" class="btn btn-primary">Update Book</a>
        <a href="/delete/<%= book._id %>" class="btn btn-danger">Delete Book</a>

    </form>
    

</div>

<%- include('./partials/footer')%>