<%- include('./partials/header')%>

<%- include('./partials/nav')%>

<div id="main-reg" class="p-2">

   <div id="book-head" class="w-100 d-flex justify-content-between align-items-center px-4">
    <div id="back3" class="d-flex justify-content-start align-items-center">
      <a href="/" class="text-decoration-none text-dark">
       <i class="ri-arrow-left-line fs-2 ps-4"></i>
      </a>
   <h3 class="px-3">Registered Books</h3>
   </div>
    <a href="/create-book" class="btn btn-primary">Create New Book</a>
   </div>

<div id="card" class="mt-5 d-flex flex-wrap  align-items-center">
 <% books.forEach(book => { %>
    
  <div class="card mx-4 my-2" style="width:18rem">
    <img src="<%= book.file %>" style="height: 30vh; object-fit: cover; object-position: center;" class="card-img-top" alt="...">
    <div class="card-body">
      <h4 class="card-title"><u><%= book.bookname %></u></h4>
      <h6><%= book.author %></h6>
      <p class="card-text "><%= book.desc.slice(0, 80) %>...</p>
      <a href="/details/<%= book._id %>" class="btn btn-primary w-100 mb-2">Explore Book</a>
      <a href="/update/<%= book._id %>" class="btn btn-primary w-100">Update Book</a>
  
    </div>
  </div>

<% }) %>
</div>

</div>

  <%- include('./partials/footer')%>
  
  